{
    "name": "regex-railroad-diagrams",
    "displayName": "Regex Railroad Diagrams",
    "description": "Display railroad diagram of regex under cursor.",
    "version": "0.2.0",
    "publisher": "kogai",
    "repository": {
        "type": "git",
        "url": "https://github.com/kogai/vscode-regex-railroad-diagrams.git"
    },
    "engines": {
        "vscode": "^1.8.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.showRegExpPreview",
                "title": "Show RegExp preview"
            }
        ]
    },
    "main": "./out/src/extension",
    "scripts": {
        "lint": "eslint src/*.ts",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "package": "vsce package",
        "publish": "vsce publish -p $VISUAL_STUDIO_CODE_ACCESS_TOKEN",
        "publish:minor": "npm run publish -- minor",
        "publish:patch": "npm run publish -- patch",
        "test:e2e": "node ./node_modules/vscode/bin/test",
        "test:unit": "script -q /dev/null mocha $(find ./out/src -name '*.test.js') | grep -v -x -F 'npm ERR'",
        "test:unit:watch": "watch 'yarn test:unit' ./src/",
        "test": "yarn lint && yarn tsc && yarn test:unit"
    },
    "dependencies": {
        "@kogai/railroad-diagrams": "^0.16.0",
        "railroad-diagrams": "^1.0.0",
        "regexp": "^1.0.0",
        "rxjs": "^5.0.1"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.0.40",
        "eslint": "^3.12.2",
        "mocha": "^2.3.3",
        "typescript": "^2.1.4",
        "typescript-eslint-parser": "^1.0.0",
        "vsce": "^1.18.0",
        "vscode": "^1.0.0",
        "watch": "^1.0.1"
    }
}
